<resources>

    <!-- Base application theme. -->
    <!-- Customize your theme here. -->
    <style name="LightTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">#00FDFD</item>
        <item name="colorPrimaryDark">#000</item>
        <item name="colorAccent">#FD0048</item>
        <item name="textColor">#000000</item>
        <item name="buttonTextColor">#000000</item>
        <item name="bgColor">#ffffff</item>
        <item name="viewColor">#22000000</item>
        <item name="imageButtonColor">#000000</item>
        <item name="android:windowAnimationStyle">@style/windowAnimationTransition</item>
    </style>


    <style name="DarkTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">#00FDFD</item>
        <item name="colorPrimaryDark">#000</item>
        <item name="colorAccent">#2600FD</item>
        <item name="textColor">#ffffff</item>
        <item name="buttonTextColor">#000000</item>
        <item name="bgColor">#000000</item>
        <item name="viewColor">#4E4E4E</item>
        <item name="imageButtonColor">#ffffff</item>
        <item name="android:windowAnimationStyle">@style/windowAnimationTransition</item>

    </style>

    <style name="windowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>

    </style>

    <style name="MyEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">#00000000</item>
        <item name="colorControlActivated">#00000000</item>
    </style>

    <style name="AppTheme.ProfileTheme">
        <item name="colorPrimaryDark">#33ff12</item>
        <item name="colorAccent">#121290</item>
        <item name="windowActionBar">false</item>
        <item name="android:fontFamily">@font/iransans_mobile_font</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColor">#FAFAFA</item>
    </style>

    <style name="AppTheme.Transparent" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextLabel" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/iransans_mobile_medium_font</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="AppTheme.HomePageActivity">
        <item name="windowActionBar">false</item>
        <item name="android:fontFamily">@font/iransans_mobile_font</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="myTimePicker"></style>

    <style name="myChips" parent="@style/Widget.MaterialComponents.Chip.Action">
        <item name="android:fontFamily">@font/iransans_mobile_light_font</item>
    </style>


</resources>
