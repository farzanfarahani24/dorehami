<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_rect_white"
    android:elevation="1dp">

    <ImageView
        android:id="@+id/img_card_view_event_pic"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:scaleType="centerCrop"
        android:src="@drawable/back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_card_view_event_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/iransans_font"
        android:gravity="right"
        android:text="نام رویداد"
        android:textColor="@android:color/black"
        android:textDirection="ltr"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_card_view_event_summary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.911"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_card_view_event_pic"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_card_view_event_summary"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="2dp"
        android:fontFamily="@font/iransans_font"
        android:text="این رویداد در دانشگاه تهران با هدف ارتقای کیفیت اموزش برگزار میشود"
        android:textColor="@android:color/black"
        android:textDirection="rtl"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/tableView_card_view_divider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@id/img_card_view_event_pic"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_card_view_event_pic"
        app:layout_constraintTop_toBottomOf="@+id/tv_card_view_event_name" />

    <TableRow
        android:id="@+id/tableView_card_view_divider"
        android:layout_width="164dp"
        android:layout_height="1dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="#ECE2BF"
        android:gravity="center_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.724"
        app:layout_constraintLeft_toRightOf="@id/img_card_view_event_pic"
        app:layout_constraintStart_toEndOf="@+id/img_card_view_event_pic"
        app:layout_constraintTop_toBottomOf="@id/tv_card_view_event_summary">

    </TableRow>

    <TextView
        android:id="@+id/tv_card_view_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:fontFamily="@font/iransans_font"
        android:text="تاریخ:98/11/8"
        android:textColor="@color/material_blue_grey_95"
        android:textSize="15sp"
        app:layout_constraintLeft_toRightOf="@+id/img_card_view_event_pic"
        app:layout_constraintTop_toBottomOf="@+id/tableView_card_view_divider"
        app:layout_constraintBottom_toTopOf="@+id/tv_card_view_capacity"
        />
    <TextView
        android:id="@+id/tv_card_view_capacity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="55dp"
        android:fontFamily="@font/iransans_font"
        android:text="ظرفیت:20"
        android:textColor="@color/material_blue_grey_95"
        android:textSize="15sp"
        app:layout_constraintLeft_toRightOf="@+id/img_card_view_event_pic"
        app:layout_constraintTop_toBottomOf="@+id/tv_card_view_date" />

    <ImageView
        android:id="@+id/img_card_view_date_circle"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/ic_circle"
        app:layout_constraintLeft_toRightOf="@+id/tv_card_view_date"
        app:layout_constraintTop_toBottomOf="@id/tableView_card_view_divider" />



    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_fav"
        app:layout_constraintHorizontal_bias="0.351"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toRightOf="@id/tv_card_view_capacity"
        app:layout_constraintTop_toBottomOf="@+id/tableView_card_view_divider" />

    <ImageView
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_circle_purple"
        app:layout_constraintLeft_toRightOf="@+id/tv_card_view_capacity"
        app:layout_constraintTop_toBottomOf="@id/tableView_card_view_divider" />
</androidx.constraintlayout.widget.ConstraintLayout>