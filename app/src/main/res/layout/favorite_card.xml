<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="150dp"
    android:layout_height="200dp"
    android:background="#ffffffff"
    android:id="@+id/constraintLayout_favorite_card"
    android:elevation="2dp"
    >

    <ImageView
        android:id="@+id/img_favorite_card_event_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:src="@drawable/back"
        app:layout_constraintBottom_toTopOf="@+id/guideline58"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="centerCrop"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline58"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.55" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline59"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.55" />


    <TextView
        android:id="@+id/tv_favorite_card_event_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="488dp"
        android:text="دوچرخه سواری "
        android:textSize="18sp"
        android:textColor="#000000"
        android:fontFamily="@font/yekan_font"
        app:layout_constraintBottom_toTopOf="@+id/tv_favorite_card_date"
        app:layout_constraintEnd_toStartOf="@+id/guideline60"
        app:layout_constraintTop_toBottomOf="@+id/guideline59" />

    <ImageView
        android:id="@+id/img_favorite_card_date_icon"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginTop="2dp"
        android:src="@drawable/ic_time"
        app:layout_constraintEnd_toStartOf="@+id/guideline60"
        app:layout_constraintTop_toBottomOf="@+id/tv_favorite_card_event_name" />

    <TextView
        android:id="@+id/tv_favorite_card_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/iransans_font"
        android:text="7 دی ساعت 12:30"
        android:alpha="0.6"
        android:textColor="#000000"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@+id/img_favorite_card_date_icon"
        app:layout_constraintTop_toBottomOf="@+id/tv_favorite_card_event_name" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline60"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />

    <ImageView
        android:id="@+id/img_favorite_card_capacity_icon"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:src="@drawable/ic_time"
        android:layout_marginTop="4.5dp"
        app:layout_constraintEnd_toStartOf="@+id/guideline60"
        app:layout_constraintTop_toBottomOf="@+id/img_favorite_card_date_icon" />

    <TextView
        android:id="@+id/tv_favorite_card_capacity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ظرفیت : 10 نفر"
        android:alpha="0.6"
        android:fontFamily="@font/iransans_font"
        android:textColor="#000000"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@+id/img_favorite_card_capacity_icon"
        app:layout_constraintTop_toBottomOf="@+id/tv_favorite_card_date" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline61"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline62"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.98" />

    <TextView
        android:id="@+id/tv_favorite_card_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/iransans_font"
        android:text="تهران "
        android:alpha="0.6"
        android:textColor="#3C3C3C"
        android:textSize="12sp"
        android:gravity="left"
        app:layout_constraintBottom_toTopOf="@+id/guideline62"
        app:layout_constraintStart_toStartOf="@+id/guideline61" />

    <ImageView
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:src="@drawable/ic_location"
        android:layout_marginLeft="2dp"
        app:layout_constraintTop_toTopOf="@+id/tv_favorite_card_location"
        app:layout_constraintBottom_toBottomOf="@+id/tv_favorite_card_location"
        app:layout_constraintStart_toEndOf="@+id/tv_favorite_card_location"/>

</androidx.constraintlayout.widget.ConstraintLayout>