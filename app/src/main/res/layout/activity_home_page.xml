    <com.gauravk.bubblenavigation.BubbleNavigationConstraintView
        android:id="@+id/top_navigation_constraint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="380dp"
        android:background="#fff"
        android:elevation="4dp"
        android:paddingRight="18dp"
        android:paddingLeft="18dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        app:bnc_mode="inside">

        <com.gauravk.bubblenavigation.BubbleToggleView
            android:id="@+id/c_item_rest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:bt_active="true"
            app:bt_colorActive="#EF5350"
            app:bt_colorInactive="#7C7C7C"
            app:bt_icon="@drawable/ic_home"
            app:bt_padding="12dp"
            app:bt_title="Home"
            app:bt_titlePadding="2dp" />

        <com.gauravk.bubblenavigation.BubbleToggleView
            android:id="@+id/c_item_rest2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:bt_active="true"
            app:bt_colorActive="#7B1FA2"
            app:bt_colorInactive="#7C7C7C"
            app:bt_icon="@drawable/ic_add"
            app:bt_padding="12dp"
            app:bt_title="Add"
            app:bt_titlePadding="2dp" />

        <com.gauravk.bubblenavigation.BubbleToggleView
            android:id="@+id/c_item_rest3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:bt_active="true"
            app:bt_colorActive="#303F9F"
            app:bt_colorInactive="#7C7C7C"
            app:bt_icon="@drawable/ic_profile"
            app:bt_padding="12dp"
            app:bt_title="Profile"
            app:bt_titlePadding="2dp" />

        <com.gauravk.bubblenavigation.BubbleToggleView
            android:id="@+id/c_item_rest4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:bt_active="true"
            app:bt_colorActive="#FFA000"
            app:bt_shapeColor="#FFA000"

            app:bt_colorInactive="#7C7C7C"
            app:bt_icon="@drawable/ic_calendar"
            app:bt_padding="12dp"
            app:bt_title="Calendar"
            app:bt_titlePadding="2dp" />
        <!-- Add more child items here - max upto 5 -->

    </com.gauravk.bubblenavigation.BubbleNavigationConstraintView>
</androidx.constraintlayout.widget.ConstraintLayout>