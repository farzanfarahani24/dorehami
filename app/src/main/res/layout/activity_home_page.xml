<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F6F8">

    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:alpha="0.9"
        android:background="@drawable/search_sort_bar"
        android:drawableStart="@android:drawable/ic_menu_search"
        android:drawableEnd="@android:drawable/btn_star"
        android:fontFamily="@font/iransans_font"
        android:gravity="right|center_vertical"
        android:hint="مثال : دوچرخه سواری"
        android:padding="5dp"
        android:paddingRight="10dp"
        android:textColor="#000"
        android:textColorHint="#000"
        android:textCursorDrawable="@null"
        android:textSize="18sp"
        app:boxStrokeColor="@color/text_input_color"
        app:hintTextAppearance="@style/TextLabel"
        app:hintTextColor="#68000000" />


    <com.gauravk.bubblenavigation.BubbleNavigationConstraintView
        android:id="@+id/top_navigation_constraint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rounded_rect_white"
        android:elevation="20dp"
        android:paddingLeft="18dp"
        android:paddingTop="10dp"
        android:paddingRight="18dp"
        android:paddingBottom="10dp"
        app:bnc_mode="inside">

        <com.gauravk.bubblenavigation.BubbleToggleView
            android:id="@+id/c_item_rest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:bt_active="true"
            app:bt_colorActive="#EF5350"
            app:bt_colorInactive="#7C7C7C"
            app:bt_icon="@drawable/ic_home"
            app:bt_padding="12dp"
            app:bt_title="Home"
            app:bt_titlePadding="2dp" />

        <com.gauravk.bubblenavigation.BubbleToggleView
            android:id="@+id/c_item_rest2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:bt_active="true"
            app:bt_colorActive="#7B1FA2"
            app:bt_colorInactive="#7C7C7C"
            app:bt_icon="@drawable/ic_add"
            app:bt_padding="12dp"
            app:bt_title="Add"
            app:bt_titlePadding="2dp" />

        <com.gauravk.bubblenavigation.BubbleToggleView
            android:id="@+id/c_item_rest3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:bt_active="true"
            app:bt_colorActive="#303F9F"
            app:bt_colorInactive="#7C7C7C"
            app:bt_icon="@drawable/ic_profile"
            app:bt_padding="12dp"
            app:bt_title="Profile"
            app:bt_titlePadding="2dp" />

        <com.gauravk.bubblenavigation.BubbleToggleView
            android:id="@+id/c_item_rest4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:bt_active="true"
            app:bt_colorActive="#FFA000"
            app:bt_colorInactive="#7C7C7C"

            app:bt_icon="@drawable/ic_calendar"
            app:bt_padding="12dp"
            app:bt_shapeColor="#FFA000"
            app:bt_title="Calendar"
            app:bt_titlePadding="2dp" />
        <!-- Add more child items here - max upto 5 -->

    </com.gauravk.bubblenavigation.BubbleNavigationConstraintView>
</FrameLayout>