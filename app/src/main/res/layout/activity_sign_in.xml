<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F6F8"
    tools:context=".Activities.SignInActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_page_colorful_croped" />

    <ImageView
        android:id="@+id/img_signin_logo"
        android:layout_width="117dp"
        android:layout_height="102dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/ic_logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.187" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cd_signin_infofield"
        android:layout_width="330dp"
        android:layout_height="330dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#fff"
        android:elevation="10dp"
        android:textColorHint="#000"
        app:boxStrokeColor="@color/text_input_color"
        app:cardBackgroundColor="#fff"
        app:cardCornerRadius="18dp"
        app:hintTextAppearance="@style/TextLabel"
        app:hintTextColor="#000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_signin_logo">

        <LinearLayout
            android:id="@+id/ll_signin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/edt_signin_username"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:hint="نام کاربری"
                android:textColorHint="#000"
                app:boxStrokeColor="@color/text_input_color"
                app:hintTextAppearance="@style/TextLabel"
                app:layout_constraintBottom_toTopOf="@+id/text_password"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/img_signin_logo">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/iransans_font"
                    android:gravity="right"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textColor="#000" />
            </com.google.android.material.textfield.TextInputLayout>

            
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/edt_signin_password"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"

                android:layout_marginEnd="16dp"
                android:hint="رمز عبور"
                android:textColorHint="#000"
                app:boxStrokeColor="@color/text_input_color"
                app:hintTextAppearance="@style/TextLabel"

                app:layout_constraintBottom_toTopOf="@+id/btn_signin"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edt_signin_username">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/iransans_font"
                    android:gravity="right"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:textColor="#000" />
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/btn_signin_register"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="60dp"
                android:backgroundTint="#F0D919"
                android:fontFamily="@font/iransans_font"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                android:text="ورود"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="parent"
                tools:ignore="OnClick" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>


</androidx.constraintlayout.widget.ConstraintLayout>