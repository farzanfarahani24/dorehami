<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="ir.ac.kntu.patogh">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_icu"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@drawable/ic_icu"
        android:supportsRtl="false"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:replace="android:icon,android:supportsRtl">
        <activity android:name=".Activities.DeleteAccount"></activity>
        <activity
            android:name=".Activities.AboutUsActivity"
            android:label="درباره ما" />
        <activity
            android:name=".Activities.SupportActivity"
            android:label="پشتیبانی" />
        <activity
            android:name=".Activities.HistoryActivity"
            android:label="تاریخچه" />
        <activity
            android:name=".Activities.BadgesActivity"
            android:label="دستاوردها" />
        <activity
            android:name=".Activities.SettingsActivity"
            android:label="تنظیمات"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".Activities.FirstPageActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.EventActivity"
            android:label="@string/title_activity_event"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activities.HomePageActivity"
            android:label="@string/title_activity_home_page"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activities.PhoneVerificationActivity"
            android:label="@string/title_activity_phone_verification"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activities.SignUpActivity"
            android:label="@string/title_activity_sign_up"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activities.MainActivity"
            android:theme="@style/AppTheme" />
    </application>

</manifest>